.chat-body__container{data: {message: {id: message.id}}}
  .post-info
    .user-name
      = message.user.name
    .created-at
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .posted-message{data: {message: {id: message.id}}}
    - if message.content.present?
      %p.posted-message__content
        = message.content
    = image_tag message.image.url, class: 'posted-message__image' if message.image.present?