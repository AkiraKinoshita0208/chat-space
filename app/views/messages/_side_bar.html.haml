.side-bar
  .side-header
    .side-header__container
      %p.user-name
        = current_user.name
      %ul.icons
        = link_to new_group_path, class: "create-group" do
          = icon('far', 'edit')
        = link_to edit_user_path(current_user), class: "edit-account" do
          = icon('fas', 'cog')
  .side-body
    .side-body__container
      - current_user.groups.each do |group|
        .group
          = link_to group_messages_path(group) do
            .group-name
              = group.name
            .latest-message
              = group.show_last_message